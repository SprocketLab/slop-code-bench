mtl_version 1.5
schema BaseSale {
  timestamp: timestamp
  location: string
  item: string
  price: float
  quantity: float
}

schema WebSale extends BaseSale {
  unit: string
  category: string
}

schema PromoData {
  timestamp: timestamp
  location: string
  item: string
  discount: float
}

pipeline CrossStream using WebSale {
  sources {
    web as W,
    pos as P,
    promo as X
  }

  join W with P
    on (W.item == P.item & W.location == P.location)
    type inner
    project {
      W.timestamp as timestamp,
      W.location  as location,
      W.item      as item,
      P.quantity  as pos_qty,
      W.price     as web_price
    } as WP

  join WP with X
    on (WP.item == X.item & WP.location == X.location)
    type inner
    project {
      WP.timestamp as timestamp,
      WP.location  as location,
      WP.item      as item,
      WP.pos_qty   as pos_qty,
      WP.web_price as web_price,
      X.discount   as discount
    }

  window(1h)
  group_by(['location','item'])
  aggregate sum(web_price) as web_rev,
            sum(pos_qty)   as pos_total,
            average(discount)  as avg_discount
}
