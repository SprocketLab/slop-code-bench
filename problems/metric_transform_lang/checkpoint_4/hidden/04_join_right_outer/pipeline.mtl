schema BaseSale {
  timestamp: timestamp
  location: string
  item: string
  price: float
  quantity: float
}

schema WebSale extends BaseSale {
  unit: string
  category: string
}

pipeline CrossStream using WebSale {
  sources {
    web as W,
    pos as P
  }

  join W with P
    on (W.item == P.item & W.location == P.location)
    type right
    project {
      P.timestamp as timestamp,
      P.location  as location,
      P.item      as item,
      P.quantity  as pos_qty,
      W.price     as web_price
    }

  window(1h)
  group_by(['location','item'])
  aggregate sum(web_price) as web_rev,
            sum(pos_qty)   as pos_total,
            count(web_price) as web_count
}
