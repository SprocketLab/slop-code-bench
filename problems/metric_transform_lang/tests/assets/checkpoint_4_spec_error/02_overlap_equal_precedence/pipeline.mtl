schema BaseSale {
  timestamp: timestamp
  location: string
  item: string
  price: float
  quantity: float
  unit: string
  category: string
}

pipeline CrossStream using BaseSale {
  sources { web as W, pos as P }
  join W with P on (W.item == P.item) type inner project { W.timestamp as timestamp, W.item as item }
  window(1h)
  aggregate count(*) as n
}

