mtl_version 1.5

schema BaseSale {
  timestamp: timestamp
  location: string
  item: string
  price: float
  quantity: float
}

schema WebSale extends BaseSale {
  unit: string
  category: string
}

pipeline MappingDefaults using WebSale {
  sources {
    web as W,
    pos as P
  }

  join W with P
    on (W.item == P.item & W.location == P.location)
    type inner
    project {
      W.timestamp as timestamp,
      W.location  as location,
      W.item      as item,
      W.quantity  as web_qty,
      P.quantity  as store_qty
    }

  window(1h)
  group_by(['location','item'])
  aggregate sum(web_qty) as web_units,
            sum(store_qty) as store_units
}
