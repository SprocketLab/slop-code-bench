mtl_version 1.5

schema BaseSale {
  timestamp: timestamp
  location: string
  item: string
  price: float
  quantity: float
}

schema WebSale extends BaseSale {
  unit: string
  category: string
}

pipeline ParamThreshold using WebSale {
  params {
    min_qty: float = 4.0
  }

  sources {
    web as W,
    pos as P
  }

  with P {
    filter(quantity >= param("min_qty"))
  }

  join W with P
    on (W.item == P.item & W.location == P.location)
    type inner
    project {
      W.timestamp as timestamp,
      W.location  as location,
      W.item      as item,
      W.price     as web_price,
      P.quantity  as pos_qty
    }

  window(1h)
  group_by(['location','item'])
  aggregate sum(web_price) as web_rev,
            sum(pos_qty) as total_pos_qty
}
