{
  "arguments": "rules.json configs",
  "rules": {
    "check_description_pattern": {
      "type": "validate_value",
      "scope": "validation",
      "key": "metadata.description",
      "constraint": {
        "pattern": "^[a-z\\-]+$"
      }
    },
    "add_description": {
      "type": "merge_data",
      "data": {
        "metadata": {
          "description": "stable-service"
        }
      }
    }
  },
  "input_files": [
    {
      "path": "configs/app.yaml",
      "file_type": "text",
      "content": "environment: production\nmetadata: {}\n"
    }
  ]
}
