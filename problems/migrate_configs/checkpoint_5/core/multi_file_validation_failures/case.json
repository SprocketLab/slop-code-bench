{
  "arguments": "rules.json configs",
  "status_code": 1,
  "rules": {
    "require_environment": {
      "type": "require_keys",
      "scope": "validation",
      "keys": [
        "environment"
      ]
    },
    "validate_env_values": {
      "type": "validate_value",
      "scope": "validation",
      "key": "environment",
      "constraint": {
        "enum": [
          "development",
          "production"
        ]
      }
    }
  },
  "input_files": [
    {
      "path": "configs/app.yaml",
      "file_type": "text",
      "content": "timeout: 30\n"
    },
    {
      "path": "configs/worker.yaml",
      "file_type": "text",
      "content": "environment: testing\n"
    }
  ]
}
