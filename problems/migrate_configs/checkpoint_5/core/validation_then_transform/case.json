{
  "arguments": "rules.json configs",
  "rules": {
    "require_environment": {
      "type": "require_keys",
      "scope": "validation",
      "keys": [
        "environment"
      ]
    },
    "set_region": {
      "type": "replace_value",
      "key": "region",
      "value": "us-west-2"
    }
  },
  "input_files": [
    {
      "path": "configs/app.yaml",
      "file_type": "text",
      "content": "environment: production\nregion: us-east-1\n"
    }
  ]
}
