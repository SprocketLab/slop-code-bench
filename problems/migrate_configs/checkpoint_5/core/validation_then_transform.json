{
  "arguments": "rules.json configs",
  "expected_stdout": "{\"event\":\"file_updated\",\"file\":\"app.yaml\",\"rules_applied\":[\"set_region\"]}\\n",
  "rules": {
    "require_environment": {
      "type": "require_keys",
      "scope": "validation",
      "keys": [
        "environment"
      ]
    },
    "set_region": {
      "type": "replace_value",
      "key": "region",
      "value": "us-west-2"
    }
  },
  "input_files": [
    {
      "path": "configs/app.yaml",
      "file_type": "yaml",
      "content": "environment: production\\nregion: us-east-1\\n"
    }
  ],
  "expected_files": {
    "configs/app.yaml": "environment: production\\nregion: us-west-2\\n"
  }
}
