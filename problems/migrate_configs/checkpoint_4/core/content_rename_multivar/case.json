{
  "arguments": "rules.json configs",
  "rules": {
    "descriptive_names": {
      "type": "content_rename",
      "scope": "file",
      "file_pattern": "content_refs/*.yaml",
      "variables": {
        "svc": "service.name",
        "env": "environment"
      },
      "new_path": "${svc}.${env}.yaml"
    }
  }
}
