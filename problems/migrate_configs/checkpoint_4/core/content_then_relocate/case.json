{
  "arguments": "rules.json configs",
  "rules": {
    "set_production": {
      "type": "replace_value",
      "key": "environment",
      "value": "production"
    },
    "move_temp_configs": {
      "type": "path_rename",
      "scope": "file",
      "path_pattern": "temp/$name.yaml",
      "new_path": "deploy/${name}.yaml"
    }
  },
  "files": {
    "configs/temp/app.yaml": "app: myapp\nenvironment: development\n",
    "configs/temp/conflict.yaml": "app: conflict\n",
    "configs/deploy/conflict.yaml": "app: deployed\n"
  }
}
